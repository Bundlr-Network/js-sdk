{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "module": "ES2022",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "target": "esnext",
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "NodeNext",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "traceResolution": false,
    "types": ["node"],
    "skipLibCheck": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "outDir": "build",
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist", "esm", "cjs"],
  "include": ["src", "currencies"]
  // "references": [
  //   {"path": "src/currencies/Arweave/node"},
  //   {"path": "src/currencies/Arweave/web"}
  // ]
}