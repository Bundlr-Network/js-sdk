{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "module": "CommonJS",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "incremental": false,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "NodeNext",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true,
    "traceResolution": false,
    "types": ["node"],
    "skipLibCheck": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    // "outDir": "./build",
    "experimentalDecorators": true
  },
  //"exclude": ["**/node_modules", "**/dist", "**/esm", "**/cjs"],
  "include": ["src/**/*", "currencies/**/*"],
  "exclude": ["**/node_modules/*", "**/dist/*", "**/esm/*", "**/cjs/*"]
  // "references": [
  //   {"path": "src/currencies/Arweave/node"},
  //   {"path": "src/currencies/Arweave/web"}
  // ]
}