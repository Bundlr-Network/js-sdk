{
  "name": "@bundlr-network/client",
  "version": "0.7.0-rc1",
  "description": "JS client for Bundlr nodes",
  "repository": "https://github.com/Bundlr-Network/js-client.git",
  "author": "Bundlr Network",
  "license": "Apache-2.0",
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "browser": "./build/esm/web/index.js",
  "sideEffects": false,
  "files": [
    "build/**/*.js",
    "build/**/*.js.map",
    "build/**/*.ts"
  ],
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    },
    "./web": {
      "import": "./build/esm/web/index.js",
      "require": "./build/cjs/web/index.js"
    },
    "./node": {
      "import": "./build/esm/node/index.js",
      "require": "./build/cjs/node/index.js"
    },
    "./bundle": {
      "default": "./build/esm/bundle.js"
    },
    "./umd.bundle": {
      "default": "./build/esm/umd.bundle.js"
    },
    "./*": {
      "import": "./*.js",
      "require": "./*.js"
    }
  },
  "scripts": {
    "dev:build": "rm -rf build && tsc -p cjs.tsconfig.json && ttsc -p esm.tsconfig.json && chmod +x ./build/cjs/node/cli.js && chmod +x ./build/esm/node/cli.js && ./scripts/fixup.sh",
    "prod:build": "yarn run dev:build && webpack && yarn run lerna:build",
    "lint:check": "eslint src/**",
    "lint:fix": "eslint src/** --fix",
    "lerna:build": "lerna run build --ignore @bundlr-network/client",
    "lerna:dev:build": "yarn run dev:build && lerna run dev:build --ignore @bundlr-network/client",
    "lerna:bootstrap": "lerna bootstrap --force-local"
  },
  "bin": {
    "bundlr": "./build/cjs/node/cli.js"
  },
  "dependencies": {
    "@supercharge/promise-pool": "^2.1.0",
    "arbundles": "^0.7.0-rc1",
    "arweave": "1.10.18",
    "async-retry": "^1.3.3",
    "base64url": "^3.0.1",
    "bignumber.js": "^9.0.1",
    "bs58": "^4.0.1",
    "commander": "^8.2.0",
    "csv": "^6.0.5",
    "inquirer": "^8.2.0",
    "mime-types": "^2.1.34"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.3",
    "@types/bn.js": "^5.1.0",
    "@types/bs58": "^4.0.1",
    "@types/inquirer": "^8.2.0",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.0",
    "@types/path-browserify": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "assert": "^2.0.0",
    "axios": "^0.25.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "crypto-browserify": "^3.12.0",
    "dts-bundle-webpack": "^1.0.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "inspectpack": "^4.7.1",
    "lerna": "^4.0.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "serve": "^13.0.2",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.4",
    "v8-profiler-next": "^1.5.1",
    "webpack": "^5.72.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  }
}
